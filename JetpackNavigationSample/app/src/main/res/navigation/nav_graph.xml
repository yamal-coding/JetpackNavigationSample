<?xml version="1.0" encoding="utf-8"?>
<navigation xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/nav_graph"
    app:startDestination="@id/startFragment">

    <fragment
        android:id="@+id/startFragment"
        android:name="com.example.yamal.jetpacknavigationsample.StartFragment"
        android:label="fragment_start"
        tools:layout="@layout/fragment_start" >
        <action
            android:id="@+id/action_startFragment_to_helloWorldFragment"
            app:destination="@id/helloWorldFragment" />
    </fragment>
    <fragment
        android:id="@+id/helloWorldFragment"
        android:name="com.example.yamal.jetpacknavigationsample.HelloWorldFragment"
        android:label="fragment_second"
        tools:layout="@layout/fragment_helloworld" >
        <argument
            android:name="name"
            android:defaultValue="world"/>
    </fragment>
</navigation>